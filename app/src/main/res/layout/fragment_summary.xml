<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/summaryFragment"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.genesis.sahx.fmogithub.SummaryData.SummaryFragment">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/imageview"
                android:id="@+id/user_picture"
                android:layout_width="200dp"
                android:layout_height="200dp" />
            <LinearLayout
                android:layout_marginLeft="50dp"
                android:id="@+id/Repos"
                android:layout_below="@id/user_picture"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#424242"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REPOS"/>

                <TextView
                    android:id="@+id/repos_text_box"
                    android:background="@drawable/magnitude_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="0"
                    android:textSize="50sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/user_picture"
                android:layout_toRightOf="@+id/Repos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/no_of_gists"
                    android:background="@drawable/magnitude_circle_small"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:textSize="40sp"
                    android:textColor="#424242"
                    />
                <TextView
                    android:textColor="#424242"
                    android:layout_marginLeft="55dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GISTS"/>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/nameTextView"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#424242"
        android:textSize="30sp"
        android:hint="Name"/>

    <TextView
        android:id="@+id/lacationTextView"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#424242"
        android:textSize="20sp"
        android:hint="Location" />

    <TextView
        android:id="@+id/emailTextView"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#424242"
        android:textSize="20sp"
        android:hint="Email" />

    <TextView
        android:id="@+id/bioTextView"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#424242"
        android:textSize="18sp"
        android:hint="Bio"
        android:layout_marginBottom="20dp"/>
</LinearLayout>

</ScrollView>
